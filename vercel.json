{
  "version": 2,
  "ignoreCommand": "true",
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.js" },
    { "src": "/(.*)", "dest": "/frontend/build/index.html" }
  ]
} 
